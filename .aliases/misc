# vim: filetype=sh
RED='\033[0;31m'
YELLOW='\033[1;33m'
NC='\033[0m'

# Edit and Source shortuts
alias ebash="vi ~/.bashrc"
alias sbash="source ~/.bashrc"
alias ezsh="vi ~/.zshrc"
alias szsh="source ~/.zshrc"

# EMACS ALIASES
alias e="emacsclient -nc"
alias em="emacsclient -n"
alias et="emacsclient -nw"
alias emacs="~/.local/bin/emacs"
alias emd="emacs --daemon"
alias emk="killall Emacs"

export ALTERNATE_EDITOR=""
export EDITOR="emacsclient -c"                  # $EDITOR opens in GUI mode
export VISUAL="emacsclient -c -a emacs"         # $VISUAL opens in GUI mode

# LVIM ALIASES
alias v="lvim"
# alias vim="lvim" except this
alias vi="lvim"
alias lv="lvim"

# Program related
alias gg="./gradlew"
alias exserver="iex -S mix phx.server"


# Docker related
alias dcu="docker-compose up -d"
alias dc="docker-compose"

# Command-line related
alias lsa='ls -a'
alias personal="cd ~/repos/personal"

upd() {
  cd ~/repos/tiger
  git checkout master
  git pull origin master
  MIX_ENV=test mix ecto.drop
  mix test.setup
}


### Asdf Updating nvim ###
alias update-nvim-stable='asdf uninstall neovim stable && asdf install neovim stable'
alias update-nvim-nightly='asdf uninstall neovim nightly && asdf install neovim nightly'
alias update-nvim-master='asdf uninstall neovim ref:master && asdf install neovim ref:master'
