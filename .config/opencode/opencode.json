{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "autoupdate": true,
  "permission": "allow",
  "keybinds": {
    "command_list": "ctrl+o",
    "session_rename": "none"
  },
  "mcp": {
    "zapier-mcp": {
      "type": "remote",
      "url": "https://mcp.zapier.com/api/v2/connect",
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    }
  },
  "plugin": [
    "@mohak34/opencode-notifier@latest"
  ]
}
