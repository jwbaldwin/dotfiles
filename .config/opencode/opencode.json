{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "autoupdate": true,
  "permission": "allow",
  "keybinds": {
    "command_list": "ctrl+o",
    "session_rename": "none"
  },
  "mcp": {
    "zapier-mcp": {
      "type": "remote",
      "url": "{env:ZAPIER_MCP_URL}",
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
  }
  },
  "plugin": [
    "@mohak34/opencode-notifier@latest"
  ]
}
